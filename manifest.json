{
  "manifest_version": 2,
  "name": "Multicolor Windows",
  "version": "1.0",
  "description": "Assign unique colors to each Firefox window with light/dark theme support",
  "homepage_url": "https://github.com/nirine/firefox-multicolor-window-theme",

  "background": {
    "scripts": ["js/main.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "theme",
    "storage",
    "activeTab",
    "<all_urls>"
  ]
}
